@using DotNetNote.Models

@model Attendee

@{
    ViewData["Title"] = "참석 등록하기";
 }

<h2>Attendee Create (등록)</h2>

<form asp-controller="Attendee" asp-action="Create" method="post" class="">
    @*<div asp-validation-summary="ModelOnly"></div>*@
    <div asp-validation-summary="All"></div>
    <div class="form-group row">
        <label class="col-sm-2" asp-for="UID">UID</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="UID" />
            <span asp-validation-for="UID" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2" asp-for="UserId">ID</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="UserId" />
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2" asp-for="Name">Name</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-lg">등록</button>
        <a asp-controller="Attendee" asp-action="Index" class="btn btn-outline-dark ">취소</a>
    </div>
</form>

@section Scripts{ 
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}