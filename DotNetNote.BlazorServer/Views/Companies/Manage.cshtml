@model List<DotNetNote.Models.Companies.CompanyModel>
<h2>Company Management</h2>

<hr />

<h3>입력</h3>
<form action="/Companies/Manage" method="post">
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <input class="mdl-textfield__input" type="text" name="name" id="name" value="" />
        <label class="mdl-textfield__label" for="Name">Name...</label>
    </div>

    <input class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored" type="submit" name="btnSubmit" value="전송" />
</form>

<hr />
<table class="mdl-data-table mdl-js-data-table w-50">
    <thead>
        <tr>
            <th class="mdl-data-table__cell--non-numeric">번호</th>
            <th class="mdl-data-table__cell--non-numeric">회사명</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td >
                @m.Id
                </td >
                <td class="mdl-data-table__cell--non-numeric">
                @m.Name
                </td>
            </tr>
        }
    </tbody>

</table>


