@model List<Idea>

<h2>아이디어 관리자</h2>

<ul>
    @foreach (var m in Model)
    {
        <li> @m.Id - @m.Note </li>
    }
</ul>

<form name="ideaFrm" method="post" action="/Idea/Index" class="">
    <div class="row">
        <div class="col">
            <input type="text" name="Note" id="Note" value="" class="form-control" />
        </div>
        <div class="col">
            <button type="submit" name="아이디어 저장" id="아이디어 저장" class="btn btn-primary">아이디어 저장</button>
        </div>
    </div>
    
</form>
